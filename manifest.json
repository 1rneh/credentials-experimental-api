{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Firefox Credential API",
    "browser_specific_settings": {
        "gecko": {
            "id": "credentials@experiments.addons.mozilla.org"
        }
    },
    "experiment_apis": {
        "credentials": {
            "schema": "schema.json",
            "parent": {
                "scopes": [
                    "addon_parent"
                ],
                "paths": [
                    [
                        "experiemnts",
                        "credentials"
                    ]
                ],
                "script": "api.js"
            }
        }
    }
}